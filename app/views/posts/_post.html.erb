<div class="post">
  <div class="time"><%= time_ago_in_words(post.created_at) + " ago" %></div>
  <div class="author"><%= post.user.name %> said...</div>
  <span class="body"><% post.id%><%= post.body %></span>
  <div class="link"><%= link_to 'Add Comment', new_post_comment_path(post) %></div>

  <% post.comments.each do |comment| %>
    <%= comment.comment %>
  <% end %>

</div>
